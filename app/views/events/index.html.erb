<h1>Listing events</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Time</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.time %></td>
    <td><%= event.local %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
    <td><a class="btn btn-primary btn-small"<%= link_to 'Checkin', events_checkin_path(event) %></a></td>

  </tr>
<% end %>
</table>

<br />

<a class="btn btn-primary btn-large" <%= link_to 'New Event', new_event_path %> </a>
