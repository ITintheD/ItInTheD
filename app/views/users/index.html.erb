<h1>Listing users</h1>

<table class="table table-striped">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>image</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', show_people_path(user) %></td>
    <td><%= link_to 'Edit', edit_people_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<a class="btn btn-primary btn-large" <%= link_to 'Sign up', new_user_registration_path %> </a>
<%-if user_signed_in?%>
  <a class="btn btn-primary btn-large" <%= link_to "Logout", destroy_user_session_path, :method => :delete %></a>
<%-else %>
  <a class="btn btn-primary btn-large" <%= link_to 'Login', new_user_session_path %> </a>
<%end%>