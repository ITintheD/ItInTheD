

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
<fieldset>
	<div class="content_title"><p>Apply Now</p></div>
	<%= devise_error_messages! %>
  	<div class="myboxinner">
  		<div class="row-fluid">
  			<div class="span4">
	  			<div class="control-group">
	   			<label>
					<%= f.label "First Name"%>
				</label>
	  			<div class="controls">
	  				<%= f.text_field :first_name %>
	  			</div>	
	  		</div>
	  	</div>
	  	<div class="span4">
	  		<div class="control-group">
	   			<label>
					<%= f.label "Last Name"%>
				</label>
	  			<div class="controls">
	  				<%= f.text_field :last_name %>
	  			</div>	
	  		</div>
	  	</div>
	  </div>
	  <div class="row-fluid">
	  	<div class="span4">
		  	<div class="control-group">
		   		<label>
					<%= f.label "Email"%>
				</label>
		  		<div class="controls">
		  			<%= f.email_field :email %>
		  		</div>	
		  	</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<label>
					<%= f.label "User Type"%>
				</label>
				<div class="controls">
					<%= f.select(:user_type, [["Instructor"], ["Student"]], :prompt => 'Select a type')%>
				</div>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4">
		      <div class="control-group">
			   	<label>
					<%= f.label "Password"%>
				</label>
			  	<div class="controls">
			  		<%= f.password_field :password %>
			  	</div>	
			  </div>
		  </div>
		<div class="span4">
			  <div class="control-group">
			   	<label>
					<%= f.label "Password Confirmation"%>
				</label>
			  	<div class="controls">
			  		<%= f.password_field :password_confirmation %>
			  	</div>	
			  </div>
		  </div>
	  	</div>	
	 </div>


	<div class="form-actions">
  			<%= f.submit "Submit", :class => "btn btn-primary" %>
  			<%= link_to "Cancel", root_path ,:class => "btn btn" %>
    </div>

    </fieldset>
<% end %>

<%= render "devise/shared/links" %>